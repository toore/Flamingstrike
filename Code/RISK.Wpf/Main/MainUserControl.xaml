<UserControl x:Class="RISK.Main.MainUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:WorldMap="clr-namespace:RISK.WorldMap"
    mc:Ignorable="d"
    d:DesignHeight="768" d:DesignWidth="1366"
    d:DataContext="{d:DesignInstance WorldMap:WorldMapViewModelTestData, IsDesignTimeCreatable=True}">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../WorldMap/WorldMapTemplates.xaml" />
            </ResourceDictionary.MergedDictionaries>            
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Viewbox Stretch="Uniform">
            <ContentControl Content="{Binding}" />
        </Viewbox>
    </Grid>
</UserControl>