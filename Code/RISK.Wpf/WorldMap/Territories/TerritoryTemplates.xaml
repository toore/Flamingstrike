        <ResourceDictionary Source="TerritoryStyles.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <DataTemplate DataType="{x:Type Territories:AlaskaViewModel}">
        <Territories:TerritoryButtonUserControl
            PathStyle="{StaticResource NorthAmericaPathStyle}"
            TerritoryName="{Binding Name}">
            <Territories:TerritoryButtonUserControl.GeometryChildren>
