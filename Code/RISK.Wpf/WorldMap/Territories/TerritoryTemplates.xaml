<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Territories="clr-namespace:RISK.WorldMap.Territories">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="TerritoryStyles.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <DataTemplate DataType="{x:Type Territories:AlaskaTerritoryViewModel}">
        <Territories:TerritoryButtonUserControl
            PathStyle="{StaticResource NorthAmericaPathStyle}"
            TerritoryName="Alaska" />
    </DataTemplate>
</ResourceDictionary>