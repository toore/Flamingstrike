    <DataTemplate DataType="{x:Type Territories:AlaskaTerritoryViewModel}">
        <Button Style="{StaticResource TerritoryButtonStyle}">
            <Button.Content>
                <Grid Background="Transparent">
                    <Path Name="alaska" Style="{StaticResource NorthAmericaPathStyle}">
                        <Path.Data>
                            <PathGeometry
                                Figures="m 12.121866 139.68511 41.67913 -42.115279 12.86906 -25.564934 50.513114 -8.563276 40.40058 8.563276 -45.57044 44.381753 5.76544 11.7349 -44.064802 -14.83465 z"
                                FillRule="NonZero" />
                        </Path.Data>
                    </Path>

                    <Label HorizontalAlignment="Center" VerticalAlignment="Center" Content="{Binding Title}" />

                </Grid>
            </Button.Content>
        </Button>
